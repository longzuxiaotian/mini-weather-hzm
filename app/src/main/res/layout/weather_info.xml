<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--天气温度信息-->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_city"/>

        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40.dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#A71717"/>

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="N/A天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp"/>

        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update"/>

        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_update_btn"
            android:src="@drawable/title_share"/>

        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"/>

    </RelativeLayout>

    <!--其他信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical"
        android:layout_below="@+id/title">

        <!--今日天气和日期-->
        <RelativeLayout
            android:id="@+id/weather_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dip">
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15.0dip"
                android:lines="1"
                android:text="N/A发布"
                android:textColor="@android:color/white"
                android:textSize="16.0sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/time"
                android:layout_marginTop="10dip">
                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15.0dip"
                    android:lines="1"
                    android:text="N/A"
                    android:textColor="@android:color/white"
                    android:textSize="30.0sp"/>
                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:lines="1"
                    android:text="N/A"
                    android:textColor="@android:color/white"
                    android:textSize="40.0sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/weather_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/week_today"
                android:src="@drawable/biz_plugin_weather_qing">
            </ImageView>
            <TextView
                android:id="@+id/climate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/week_today"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@id/weather_image"
                android:text="N/A"
                android:textColor="@android:color/white"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/week_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="20.0dip"
                android:text="N/A"
                android:textColor="@android:color/white"
                android:textSize="15.0sp"
                />

        </RelativeLayout>

        <!--其他信息-->
        <RelativeLayout
            android:id="@+id/other_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10.0dip">

            <LinearLayout
                android:id="@+id/pm_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6.0dip"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip"
                android:paddingTop="6.0dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pm2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20.0dip"
                        android:lines="1"
                        android:text="PM2.5"
                        android:textColor="@android:color/white"
                        android:textSize="20.0sp"/>

                    <TextView
                        android:id="@+id/pm2_5_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20.0dip"
                        android:lines="1"
                        android:text="N/A"
                        android:textColor="@android:color/white"
                        android:textSize="25.0sp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/pm2_5_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:src="@drawable/biz_plugin_weather_0_50"/>

                <TextView
                    android:id="@+id/pm2_5_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:text="N/A"
                    android:textColor="@android:color/white"
                    android:textSize="30.0sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pm_temp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/wind"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fengxiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="N/A"
                        android:textColor="@android:color/white"
                        android:textSize="15.0sp"/>

                    <TextView
                        android:id="@+id/fengli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="N/A"
                        android:textColor="@android:color/white"
                        android:textSize="20.0sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="2.0dip"
                    android:layout_height="40.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_toRightOf="@id/wind"
                    android:background="@android:color/white"/>

                <LinearLayout
                    android:id="@+id/humidity"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="湿度"
                        android:textColor="@android:color/white"
                        android:textSize="15.0sp"/>

                    <TextView
                        android:id="@+id/humidity_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="N/A"
                        android:textColor="@android:color/white"
                        android:textSize="20.0sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="2.0dip"
                    android:layout_height="40.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_toRightOf="@id/wind"
                    android:background="@android:color/white"/>

                <LinearLayout
                    android:id="@+id/date"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="温度"
                        android:textColor="@android:color/white"
                        android:textSize="15.0sp"/>

                    <TextView
                        android:id="@+id/high_low_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="N/A"
                        android:textColor="@android:color/white"
                        android:textSize="20.0sp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/other_weathers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="22dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</RelativeLayout>